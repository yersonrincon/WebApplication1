@model WebApplication1.Models.usuario

@{
    ViewBag.Title = "Details";
    var nombreUsuario = Model.nombre;
}

<h2>Detalles del Usuario: @nombreUsuario</h2>

    <div>
        <h4>usuario</h4>
        <hr />
        <dl class="dl-horizontal">

            <dt>
                Nombre
            </dt>
            <dd>
                @Html.DisplayFor(model => model.nombre)
            </dd>

            <dt>
               Apellido
            </dt>

            <dd>
                @Html.DisplayFor(model => model.apellido)
            </dd>

            <dd>
            <dt>
               Fecha Nacimiento
            </dt>
            <dd>
                @Html.DisplayFor(model => model.fecha_nacimiento)
            </dd>

            <dt>
               Contraseña
            </dt>

            <dd>
                @Html.DisplayFor(model => model.password)
            </dd>

            <dt>
                Correo
            </dt>

            <dd>
                @Html.DisplayFor(model => model.email)
            </dd>

        </dl>
    </div>
    <p>
        @Html.ActionLink("Editar el usuario "+ nombreUsuario
       , "Edit", new { id = Model.id }) |
        @Html.ActionLink("Regresar ala lista ", "Index")
    </p>
